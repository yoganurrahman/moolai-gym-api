SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@moolaigym.com
SMTP_FROM_NAME=Moolai Gym

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
