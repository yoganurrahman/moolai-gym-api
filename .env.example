APP_NAME=Moolai Gym API
DEBUG=false

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=moolai_gym

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
PIN_TOKEN_EXPIRE_HOURS=1

# CORS (comma-separated)
